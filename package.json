{
  "name": "synergiq-crm",
  "version": "1.0.0",
  "description": "Multi-tenant CRM platform for Cloudflare",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "deploy:backend": "cd backend && npm run deploy",
    "deploy:frontend": "cd frontend && npm run build && npm run deploy",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "test": "cd backend && npm test && cd ../frontend && npm test"
  },
  "keywords": [
    "crm",
    "multi-tenant",
    "cloudflare",
    "workers",
    "d1",
    "government-contracting"
  ],
  "author": "Synergiq",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
